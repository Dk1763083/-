<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dong.dao.UserDao">
<!-- 1.根据账户密码查询用户 -->
	<select id="SelectByUnamePwd" resultType="User">
		select * from shop_user where username=#{uname} and password=#{pwd}
	</select>
<!--2.插入用户  -->
    <insert id="InsertUser">
		insert into shop_user values(#{username},#{password},#{name,jdbcType=VARCHAR},#{zip,jdbcType=INTEGER},#{address,jdbcType=VARCHAR})
	</insert>
<!-- 3.查询所有账号 -->
	<select id="SelectAllUname" resultType="java.lang.String">
		select username from shop_user 
	</select>
<!--4.通过账号查找用户  -->
	<select id="SelectByUname" resultType="User">
		select * from shop_user where username=#{username} 
	</select>	
<!--5.更新用户信息  -->
	<update id="UpdateUser">
		update shop_user set name=#{name,jdbcType=VARCHAR},zip=#{zip,jdbcType=INTEGER},address=#{address,jdbcType=VARCHAR} where username=#{username}
	</update>
<!-- 6.修改用户密码 -->
	<update id="UpdatePwd">
		update shop_user set password=#{pwd} where username=#{uname} 
	</update>

</mapper>
