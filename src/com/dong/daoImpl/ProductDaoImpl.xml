<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dong.dao.ProductDao">
<!--1.查询所有商品信息 -->
   <select id="SelectAllByIndex" resultType="Product"> 
		select *  from (select p.*,rownum rn from shop_product p) where rn&gt;=#{begin} and rn&lt;=#{end}
	</select>
<!--2.通过id查询商品信息 -->
	<select id="SelectById" resultType="Product">
		select * from shop_product where id=#{id}
	</select>
<!--3.查询商品总数 -->
<select id="SelectCount" resultType="Integer">
		select count(*) from shop_product
	</select>	
</mapper>
